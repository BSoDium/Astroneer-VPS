shell=bash
enable=all

# SC2250: Prefer ${var} over $var — too noisy, not a correctness issue
# SC2312: Consider invoking this command separately — intentionally inline
# SC2034: Variable appears unused — false positive for lib/ exports
# SC2154: Variable referenced but not assigned — false positive for variables
#         sourced from .env and lib/*.sh (shellcheck can't follow dynamic sources)
disable=SC2250,SC2312,SC2034,SC2154
